<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Логин" FontSize="25" FontFamily="/Fonts/#Amatic SC"/>
        <Label Content="Пароль" FontSize="25" Grid.Row="1" FontFamily="/Fonts/#Amatic SC"/>
        <TextBox Grid.Column="1"/>
        <TextBox Grid.Row="1" Grid.Column="1"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
            <Button x:Name="OKButton" Content="ОК"/>
            <Button x:Name="CancelButton" Content="Отмена"/>
        </StackPanel>
        <Image Source="/Images/galaxy.jpg" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2"/>
    </Grid>
</Window>

<Window x:Class="Clicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <WrapPanel>
            <Label Name="pechenieCount" Width="100" Height="25"/>
            <Label x:Name="GrandmotherCount" Width="100" Height="25" Margin="125,0,0,0"/>
        </WrapPanel>
        <WrapPanel>
            <Ellipse Name="cookieEllipse" Cursor="Hand" Width="160" Height="160" MouseDown="CookieEllipse_MouseDown">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="Images/1.png" Stretch="None"/>
                </Ellipse.Fill>
            </Ellipse>
            <Rectangle Name="GrandmotherRectangle" Cursor="Hand" Width="160" Height="190" MouseDown="GrandmotherRectangle_MouseDown">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="Images/2.jpg"/>
                </Rectangle.Fill>
            </Rectangle>
        </WrapPanel>
    </StackPanel>
</Window>

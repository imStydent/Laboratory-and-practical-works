<Page x:Class="Task1.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800"
      Title="Главная">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="AuthorizationButton" Content="Авторизация" Click="AuthorizationButton_Click"/>
        <Button x:Name="RegistrationButton" Content="Регистрация" Click="RegistrationButton_Click"/>
        <Button x:Name="OptionButton" Content="Настройки" Click="OptionButton_Click"/>
    </StackPanel>
</Page>

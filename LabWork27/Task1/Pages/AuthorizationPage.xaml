<Page x:Class="Task1.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Логин"/>
        <Label Grid.Row="1" Content="Пароль"/>
        <TextBox Grid.Column="1"/>
        <TextBox Grid.Column="1" Grid.Row="1"/>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <Button x:Name="EnterButton" Content="Войти" Click="EnterButton_Click"/>
            <Button x:Name="RegistrationButton" Content="Зарегистрироваться" Click="RegistrationButton_Click"/>
        </StackPanel>
    </Grid>
</Page>

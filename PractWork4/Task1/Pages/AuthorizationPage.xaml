<Page x:Class="Task1.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Логин"/>
        <Label Content="Пароль" Grid.Row="1"/>
        <TextBox x:Name="loginTextBox" Grid.Column="1"/>
        <TextBox x:Name="passwordTextBox" Grid.Row="1"  Grid.Column="1"/>
        <Button x:Name="authorizationButton" Content="Войти" Grid.Row="2" Grid.ColumnSpan="2" Click="AuthorizationButton_Click"/>
    </Grid>
</Page>

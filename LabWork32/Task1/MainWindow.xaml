<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Список продуктов"/>
        <ListBox x:Name="groceryList">
            <CheckBox Content="Сыр"/>
            <CheckBox Content="Молоко"/>
            <CheckBox Content="Хлеб"/>
            <CheckBox Content="Колбаса"/>
            <CheckBox Content="Макароны"/>
        </ListBox>
        <Button x:Name="endButton" Content="Завершить выбор" Width="150" Click="EndButton_Click"/>
    </StackPanel>
</Window>
